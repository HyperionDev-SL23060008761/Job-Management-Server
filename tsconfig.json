{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ESNext",

		/* Modules */
		"module": "NodeNext",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "NodeNext",

		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"skipLibCheck": true
	},
	"exclude": ["./tests"]
}
